{
  "name": "spark",
  "version": "0.5.0",
  "description": "AI-powered web automation library and CLI tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "spark": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "spark": "NODE_NO_WARNINGS=1 tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "install-cli": "npm run build && chmod +x dist/cli.js && npm install -g .",
    "format": "prettier --write . --list-different",
    "format:check": "prettier --check .",
    "release": "./scripts/release.sh",
    "check": "pnpm run format && pnpm run typecheck && pnpm test"
  },
  "keywords": [
    "ai",
    "automation",
    "web-scraping",
    "playwright",
    "browser-automation",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.17.25",
    "jsdom": "^24.1.3",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "tsx": "^4.20.2",
    "vitest": "^1.6.1"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.0",
    "@ghostery/adblocker-playwright": "^2.5.0",
    "@openrouter/ai-sdk-provider": "^0.7.1",
    "ai": "^4.2.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "cross-fetch": "^4.1.0",
    "dotenv": "^16.4.7",
    "eventemitter3": "^5.0.1",
    "handlebars": "^4.7.8",
    "playwright": "1.53.0",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "packageManager": "pnpm@9.0.0"
}
