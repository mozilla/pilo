{
  "name": "@tabstack/spark",
  "version": "0.12.0",
  "description": "Spark CLI - AI-powered web automation tool",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "spark": "./dist/cli.js"
  },
  "engines": {
    "node": "^22.0.0"
  },
  "scripts": {
    "build": "tsup && pnpm run copy-extensions",
    "prebuild": "pnpm --filter spark-core build && pnpm --filter spark-extension run build:all",
    "copy-extensions": "mkdir -p dist/extensions && cp ../extension/dist/*.zip dist/extensions/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "spark-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "tsup": "^8.3.5",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "packageManager": "pnpm@9.0.0"
}
