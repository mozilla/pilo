# =============================================================================
# PILO SERVER CONFIGURATION
# =============================================================================
# Copy this file to .env and configure for your environment
# 
# Configuration Priority: Request parameters > Environment variables > Global config

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# AI Provider API Key (choose one)
OPENAI_API_KEY=your_openai_api_key_here
# OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server port
PORT=3000

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================

# AI provider selection (default: openai)
PILO_PROVIDER=openai
# PILO_PROVIDER=openrouter

# Model selection (uses provider defaults if not specified)
# PILO_MODEL=gpt-4.1                    # OpenAI
# PILO_MODEL=anthropic/claude-3-sonnet  # OpenRouter

# =============================================================================
# BROWSER CONFIGURATION
# =============================================================================

# Browser type (default: firefox)
# Options: firefox, chrome, chromium, safari, webkit, edge
PILO_BROWSER=firefox

# Headless mode (default: false for dev, true for production)
PILO_HEADLESS=false
# PILO_HEADLESS=true  # Recommended for Docker/production

# Ad blocking (default: false)
PILO_BLOCK_ADS=true

# Block resource types for better performance (comma-separated)
# Options: image, stylesheet, font, media, manifest
PILO_BLOCK_RESOURCES=media,manifest

# =============================================================================
# WEBAGENT BEHAVIOR
# =============================================================================

# Debug mode with detailed logging (default: false)
PILO_DEBUG=false

# Vision mode for screenshot analysis (default: false)
PILO_VISION=false

# Maximum iterations (default: 50, consider 20-30 for containers)
PILO_MAX_ITERATIONS=50
# PILO_MAX_ITERATIONS=30  # For Docker/production

# Maximum validation attempts (default: 3, consider 2 for containers)
PILO_MAX_VALIDATION_ATTEMPTS=3
# PILO_MAX_VALIDATION_ATTEMPTS=2  # For Docker/production

# =============================================================================
# SEARCH CONFIGURATION
# =============================================================================

# Search provider (default: none - disables web search tool)
# Options: none, duckduckgo, google, bing, parallel-api
# PILO_SEARCH_PROVIDER=none
# PILO_SEARCH_PROVIDER=duckduckgo

# Parallel API key (required when using parallel search provider)
# PARALLEL_API_KEY=your_parallel_api_key_here

# =============================================================================
# PLAYWRIGHT CONFIGURATION
# =============================================================================

# Remote browser endpoint (optional)
# PILO_PW_ENDPOINT=ws://localhost:9222
# PILO_PW_ENDPOINT=ws://browserless:3000  # For Docker Compose

# Bypass Content Security Policy (default: true)
PILO_BYPASS_CSP=true

# =============================================================================
# PROXY CONFIGURATION (Optional)
# =============================================================================

# Proxy server (supports http, https, socks5)
# PILO_PROXY=http://proxy.company.com:8080
# PILO_PROXY=socks5://127.0.0.1:1080

# Proxy authentication
# PILO_PROXY_USERNAME=username
# PILO_PROXY_PASSWORD=password

# =============================================================================
# EXAMPLE CONFIGURATIONS
# =============================================================================

# Development Setup (local testing)
# PILO_PROVIDER=openai
# OPENAI_API_KEY=sk-your-key
# PILO_BROWSER=chrome
# PILO_HEADLESS=false
# PILO_DEBUG=true
# PILO_VISION=true

# Production/Docker Setup (optimized performance)
# PILO_PROVIDER=openai
# OPENAI_API_KEY=sk-your-key
# PILO_BROWSER=firefox
# PILO_HEADLESS=true
# PILO_BLOCK_ADS=true
# PILO_BLOCK_RESOURCES=image,media,font
# PILO_MAX_ITERATIONS=30

# OpenRouter with Vision (alternative AI provider)
# PILO_PROVIDER=openrouter
# OPENROUTER_API_KEY=sk-or-your-key
# PILO_MODEL=anthropic/claude-3-sonnet
# PILO_VISION=true
# PILO_DEBUG=true

# Corporate Proxy Setup
# PILO_PROXY=http://corporate-proxy:8080
# PILO_PROXY_USERNAME=corp-user
# PILO_PROXY_PASSWORD=corp-pass
# PILO_BROWSER=chrome
# PILO_HEADLESS=true

# Remote Browser Setup (external browserless)
# PILO_PW_ENDPOINT=ws://browserless.company.com:3000
# PILO_BROWSER=chromium
# PILO_HEADLESS=true
# PILO_BLOCK_ADS=true
