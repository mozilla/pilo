    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare"
  },
  "dependencies": {
    "@ai-sdk/openai": "^1.3.23",
    "@wxt-dev/webextension-polyfill": "^1.0.0",
    "ai": "^4.3.17",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "spark": "file:..",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@wxt-dev/module-react": "^1.1.3",
    "typescript": "^5.8.3",
    "wxt": "^0.20.6"
  }
}
